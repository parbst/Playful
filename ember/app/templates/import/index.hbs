{{link-to 'import audio tag' 'import.audio.tag'}}
<div class="row">
	<div class="col-md-6">
	{{scan-browser root="/upload" selectedFiles=selectedFiles}}
	</div>
	<div class="col-md-6">
		<div style="margin-left: 20%;">
			<p>
				<button {{action 'startAudioOrderLine'}} type="button" class="btn btn-primary btn-lg">Audio</button>
				<button type="button" class="btn btn-default btn-lg">Movie</button>
				<button type="button" class="btn btn-default btn-lg" disabled="disabled">Tv series</button>
			</p>
			<div>
				{{icon-fontawesome icon="refresh" spin="true" hide=hideLoadingSpinner}}
				{{#if allSelectedFiles.length}}
					{{allSelectedFiles.length}} files selected for import
				{{/if}}
			</div>
		</div>
	</div>
</div>
